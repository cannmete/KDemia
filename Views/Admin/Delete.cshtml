@model KDemia.Models.User
@{
    ViewData["Title"] = "Kullanıcıyı Sil";
    Layout = "_AdminLayout";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Kullanıcı Silme İşlemi</h2>
    </header>

    <div class="row">
        <div class="col-lg-8">

            <section class="card card-modern card-featured-left card-featured-danger">
                <header class="card-header">
                    <h2 class="card-title text-danger">Dikkat!</h2>
                </header>
                <div class="card-body">
                    <div class="alert alert-danger mb-4">
                        <strong>Uyarı:</strong> Aşağıdaki kullanıcıyı silmek üzeresiniz. Bu işlem <strong>geri alınamaz</strong> ve kullanıcıya ait tüm veriler silinebilir.
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-sm-4 control-label font-weight-bold text-end">Kullanıcı Adı:</label>
                        <div class="col-sm-8">
                            <span class="form-control-static">@Model.FullName</span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-sm-4 control-label font-weight-bold text-end">E-Posta:</label>
                        <div class="col-sm-8">
                            <span class="form-control-static">@Model.Email</span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-sm-4 control-label font-weight-bold text-end">Mevcut Rol:</label>
                        <div class="col-sm-8">
                            <span class="badge @(Model.Role == "Admin" ? "badge-dark" : "badge-info")">@Model.Role</span>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-end">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />

                            <a asp-action="ControlPanel" class="btn btn-default me-2">İptal / Geri Dön</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Kullanıcıyı Kalıcı Olarak Sil
                            </button>
                        </form>
                    </div>

                </div>
            </section>

        </div>
    </div>
</section>