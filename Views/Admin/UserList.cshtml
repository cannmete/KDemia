@using Microsoft.AspNetCore.Identity
@using KDemia.Models

@inject UserManager<User> UserManager

@model List<KDemia.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="card">
    <header class="card-header">
        <h2 class="card-title">Kayıtlı Kullanıcılar</h2>
    </header>
    <div class="card-body">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Ad Soyad</th>
                    <th>Rol</th>
                    <th>Kayıt Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    // Her satırda kullanıcının rolünü soruyoruz
                    var roles = await UserManager.GetRolesAsync(user);
                    var userRole = roles.FirstOrDefault() ?? "User";

                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>
                            @if (userRole == "Admin")
                            {
                                <span class="badge bg-danger">Yönetici</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">Kullanıcı</span>
                            }
                        </td>
                        <td>@user.CreatedDate.ToShortDateString()</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>