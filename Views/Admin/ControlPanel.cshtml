@model List<User>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<header class="page-header d-flex justify-content-between align-items-center mb-3">
    <h2>Kullanıcı Yönetimi</h2>
</header>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Email</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="ChangeRole" method="post" class="d-flex align-items-center">
                        <input type="hidden" name="id" value="@user.Id" />
                        <select name="role" class="form-select form-select-sm me-1">
                            <option value="User" selected="@(user.Role == "User")">User</option>
                            <option value="Admin" selected="@(user.Role == "Admin")">Admin</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-success">Kaydet</button>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
