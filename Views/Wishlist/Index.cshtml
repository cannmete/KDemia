@model List<KDemia.Models.Wishlist>

@{
    ViewData["Title"] = "İstek Listem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="min-height: 60vh;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="font-weight-bold">İstek Listem ❤️</h2>
        <span class="badge bg-danger fs-6">Toplam: @Model.Count Kurs</span>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-light text-center p-5 rounded shadow-sm border">
            <i class="far fa-heart fa-3x mb-3 text-danger opacity-50"></i>
            <h4>Listeniz şimdilik boş.</h4>
            <p class="text-muted">İlginizi çeken kursları kalp ikonuna basarak buraya ekleyebilirsiniz.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3 px-4">Kursları İncele</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0 position-relative group-hover course-card">

                        <div class="position-absolute top-0 end-0 p-2" style="z-index: 10;">
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-light rounded-circle shadow text-danger"
                                        onclick="return confirm('Bu kursu istek listesinden çıkarmak istediğinize emin misiniz?');"
                                        title="Listeden Kaldır">
                                    <i class="fas fa-times"></i>
                                </button>
                            </form>
                        </div>

                        <div class="position-relative overflow-hidden rounded-top" style="height: 140px; background: #eee;">
                            @if (item.Course != null && !string.IsNullOrEmpty(item.Course.VideoUrl))
                            {
                                <img src="https://img.youtube.com/vi/@item.Course.VideoUrl.Replace("https://www.youtube.com/watch?v=", "")/mqdefault.jpg" class="w-100 h-100" style="object-fit:cover;" />
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-danger bg-opacity-10 text-danger">
                                    <i class="fas fa-bookmark fa-3x"></i>
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            @if (item.Course?.Category != null)
                            {
                                <span class="badge bg-light text-dark border mb-2">@item.Course.Category.Name</span>
                            }

                            <h6 class="card-title text-truncate fw-bold mb-1" title="@item.Course?.Title">@item.Course?.Title</h6>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <h6 class="text-primary fw-bold mb-0">@item.Course?.Price.ToString("C2")</h6>
                                <small class="text-muted">@item.CreatedDate.ToShortDateString()</small>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 pt-0">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-eye me-2"></i> İncele & Satın Al
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .course-card {
        transition: transform 0.2s;
    }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>