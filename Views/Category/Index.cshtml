@model List<KDemia.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="card">
    <header class="card-header">

        <div class="row">
            <div class="col-6">
                <h2 class="card-title" style="margin-top: 5px;">Kategori Listesi</h2>
            </div>

            <div class="col-6 text-right" style="text-align: right;">
                <a href="/Category/Create" class="btn btn-primary btn-success">
                    <i class="fas fa-plus"></i> Kategori Ekle
                </a>
            </div>
        </div>
    </header>
    <div class="card-body">
        <table class="table table-bordered table-striped mb-0" id="datatable-default">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th width="150">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Silinen satırın HTML'den de kalkması için ID veriyoruz (row_5 gibi)
                    <tr id="row_@item.Id">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Pasif</span>
                            }
                        </td>
                        <td class="text-center">
                            <a href="/Category/Edit/@item.Id" class="btn btn-warning btn-sm text-white" title="Düzenle">
                                <i class="fas fa-pencil-alt"></i>
                            </a>

                            <button onclick="deleteCategory(@item.Id)" class="btn btn-danger btn-sm" title="Sil">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info mt-3">
                Henüz hiç kategori eklenmemiş.
            </div>
        }
    </div>
</section> 
@section Scripts { 
    <script> // AJAX Başlangıç
        function deleteCategory(id) {
            // 1. Kullanıcıya sor
            if (confirm('Bu kategoriyi silmek istediğinize emin misiniz?')) {

                // 2. AJAX İsteği Gönder
                $.ajax({
                    url: '/Category/Delete',
                    type: 'POST',
                    data: { id: id },        // Gönderilecek veri
                    success: function (response) {

                        // 3. Başarılıysa ne olsun
                        if (response.success) {

                            // O satırı (tr) bul ve yavaşça yok et - fadeOut
                            $("#row_" + id).fadeOut(500, function() {
                                $(this).remove(); // Tamamen HTML'den sil
                            });

                            // Basit bir uyarı
                            alert(response.message);
                        }
                        else {
                            // Backend'den hata geldiyse göster
                            alert("Hata: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Sunucu ile iletişim kurulurken bir hata oluştu.");
                    }
                });
            }
        } // AJAX Bitiş
    </script> 
}