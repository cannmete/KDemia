@model KDemia.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum"; Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifre Sıfırla - KDemia</title>
    <link rel="stylesheet" href="~/portoadmin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/portoadmin/vendor/font-awesome/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card-box {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            width: 100%;
            max-width: 450px;
        }

        .card-header {
            background: #0088cc;
            color: white;
            padding: 30px;
            text-align: center;
            border: none;
        }

        .btn-custom {
            background: #0088cc;
            color: white;
            height: 45px;
            border-radius: 8px;
            width: 100%;
            font-weight: 600;
            border: none;
        }

            .btn-custom:hover {
                background: #006699;
            }

        .form-control {
            height: 45px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="card card-box">
        <div class="card-header">
            <h3 class="mb-1"><i class="fas fa-lock me-2"></i>Şifre Kurtarma</h3>
            <p class="mb-0 opacity-75 small">Hesabınıza erişmek için e-posta adresinizi girin.</p>
        </div>
        <div class="card-body p-4 bg-white">
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-muted small">E-POSTA ADRESİ</label>
                    <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-custom mb-3">Sıfırlama Linki Gönder</button>

                <div class="text-center">
                    <a asp-action="Login" class="text-decoration-none text-muted small"><i class="fas fa-arrow-left me-1"></i> Giriş ekranına dön</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>