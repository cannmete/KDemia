@{
    ViewData["Title"] = "Mail Gönderildi"; Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kontrol Edin - KDemia</title>
    <link rel="stylesheet" href="~/portoadmin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/portoadmin/vendor/font-awesome/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: sans-serif;
        }

        .card-box {
            max-width: 500px;
            width: 100%;
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="card card-box p-5 text-center">
        <div class="mb-4 text-success">
            <i class="fas fa-envelope-open-text fa-4x"></i>
        </div>
        <h3 class="mb-3">E-Posta Gönderildi!</h3>
        <p class="text-muted">Şifrenizi sıfırlamak için gerekli talimatları e-posta adresinize gönderdik.</p>

        @if (TempData["ResetLink"] != null)
        {
            <div class="alert alert-warning mt-4 text-break text-start">
                <strong>(Demo Modu) SMTP olmadığı için link burada:</strong><br />
                <a href="@TempData["ResetLink"]" class="btn btn-sm btn-dark mt-2">Şifreyi Sıfırla</a>
            </div>
        }

        <a asp-action="Login" class="btn btn-outline-primary mt-3">Giriş Yap</a>
    </div>
</body>
</html>