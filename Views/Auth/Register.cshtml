@model KDemia.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - KDemia</title>

    <link rel="stylesheet" href="~/portoadmin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/portoadmin/vendor/font-awesome/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #fff;
            overflow-x: hidden;
        }

        .login-container {
            min-height: 100vh;
        }

        /* Sol Taraf (Form) */
        .login-form-side {
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 50px;
        }

        /* Sağ Taraf (Görsel - Register için farklı renk tonu) */
        .login-image-side {
            /* Mavi tonlarında gradient */
            background: linear-gradient(135deg, #0088cc 0%, #2b5876 100%), url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80');
            background-blend-mode: multiply;
            background-size: cover;
            background-position: center;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 40px;
        }

        .form-control {
            height: 48px;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            padding-left: 15px;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                border-color: #0088cc;
                box-shadow: 0 0 0 0.2rem rgba(0, 136, 204, 0.25);
                background-color: #fff;
            }

        .btn-custom {
            height: 48px;
            border-radius: 8px;
            background: #0088cc;
            color: #fff;
            font-weight: 600;
            border: none;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: #006699;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 136, 204, 0.4);
            }

        .brand-logo {
            font-size: 24px;
            font-weight: 700;
            color: #0088cc;
            margin-bottom: 20px;
            display: inline-block;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="container-fluid login-container">
        <div class="row h-100">

            <div class="col-md-6 col-lg-5 login-form-side bg-white">
                <div class="w-100 mx-auto" style="max-width: 400px;">
                    <a href="/" class="brand-logo"><i class="fas fa-cube me-2"></i>KDemia</a>

                    <h2 class="fw-bold mb-2">Aramıza Katıl</h2>
                    <p class="text-muted mb-4">Eğitimlere erişmek için ücretsiz hesap oluştur.</p>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 py-2 small"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">AD SOYAD</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-user text-muted"></i></span>
                                <input asp-for="FullName" class="form-control border-start-0 ps-0" placeholder="Adınız Soyadınız" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">E-POSTA</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="ornek@mail.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-muted">ŞİFRE</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-muted"></i></span>
                                    <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="******" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-muted">ŞİFRE TEKRAR</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-muted"></i></span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control border-start-0 ps-0" placeholder="******" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-custom btn-block">Hesap Oluştur</button>
                        </div>

                        <p class="text-center text-muted small">
                            Zaten hesabınız var mı? <a asp-action="Login" class="fw-bold text-primary text-decoration-none">Giriş Yap</a>
                        </p>
                    </form>
                </div>
            </div>

            <div class="col-md-6 col-lg-7 d-none d-md-flex login-image-side">
                <div class="text-content">
                    <h1 class="display-4 fw-bold mb-3">Sınırları Zorla.</h1>
                    <p class="lead mb-4 opacity-75">Binlerce öğrenciyle birlikte öğren, paylaş ve geliş.<br>KDemia dünyası seni bekliyor.</p>
                </div>
            </div>

        </div>
    </div>

    <script src="~/portoadmin/vendor/jquery/jquery.js"></script>
    <script src="~/portoadmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>