@model KDemia.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol - KDemia</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        body { background-color: #ededed; }
        .center-sign {
            max-width: 400px;
            margin: 5% auto;
            padding: 20px;
            background: #fff;
            border-top: 5px solid #0088cc; 
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>

    <div class="center-sign">
        <h3 class="text-center mb-4">KDemia Kayıt</h3>

        <form asp-action="Register" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label>Ad Soyad</label>
                <input asp-for="FullName" class="form-control" placeholder="Adınız Soyadınız" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>E-Posta</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="ornek@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Şifre</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Şifre Tekrar</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="row mt-4">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                </div>
                <div class="col-6 text-right">
                    <a asp-action="Login" class="btn btn-light btn-block">Giriş Yap</a>
                </div>
            </div>

        </form>
    </div>

</body>
</html>