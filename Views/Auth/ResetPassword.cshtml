@model KDemia.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Yeni Şifre"; Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Yeni Şifre - KDemia</title>
    <link rel="stylesheet" href="~/portoadmin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/portoadmin/vendor/font-awesome/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card-box {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            width: 100%;
            max-width: 450px;
        }

        .card-header {
            background: #2b5876;
            color: white;
            padding: 30px;
            text-align: center;
            border: none;
        }

        .btn-custom {
            background: #2b5876;
            color: white;
            height: 45px;
            border-radius: 8px;
            width: 100%;
            font-weight: 600;
            border: none;
        }

            .btn-custom:hover {
                background: #1a3c52;
            }

        .form-control {
            height: 45px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="card card-box">
        <div class="card-header">
            <h3 class="mb-1"><i class="fas fa-key me-2"></i>Yeni Şifre Belirle</h3>
            <p class="mb-0 opacity-75 small">Lütfen hesabınız için güçlü bir şifre seçin.</p>
        </div>
        <div class="card-body p-4 bg-white">
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="mb-3">
                    <label class="form-label fw-bold text-muted small">YENİ ŞİFRE</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="******" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-muted small">ŞİFRE TEKRAR</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="******" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-custom mb-3">Şifreyi Değiştir</button>
            </form>
        </div>
    </div>
</body>
</html>