}

<!doctype html>
<html class="fixed sidebar-left-collapsed">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>KDemia - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/portoadmin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/portoadmin/vendor/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/portoadmin/css/theme.css" />
    <link rel="stylesheet" href="~/portoadmin/css/custom.css" />

    <script src="~/admin-assets/vendor/modernizr/modernizr.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <section class="body">

        <header class="header">
            <div class="logo-container">
                <a href="/Admin/Index" class="logo">
                    <img src="~/portoadmin/img/logo.png" height="30" alt="KDemia Logo" />
                </a>

                <div class="d-md-none toggle-sidebar-left" data-toggle-class="sidebar-left-opened">
                    <i class="fas fa-bars" aria-label="Toggle sidebar"></i>
                </div>
            </div>

            <div class="header-right">
                <div id="userbox" class="userbox">
                    <a href="#" data-bs-toggle="dropdown">
                        <figure class="profile-picture">
                            <img src="~/portoadmin/img/user.png" class="rounded-circle" alt="User" />
                        </figure>
                        <span class="profile-info">
                            <span class="name">@User.Identity.Name</span>
                            <span class="role">Yönetici</span>
                        </span>
                    </a>

                    <div class="dropdown-menu">
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Auth/Logout">
                            <i class="fas fa-power-off"></i> Çıkış Yap
                        </a>
                    </div>
                </div>
            </div>
        </header>
        <div class="inner-wrapper">

            <aside id="sidebar-left" class="sidebar-left">
                <div class="sidebar-header">
                    <div class="sidebar-title">
                        Yönetim Paneli
                    </div>
                </div>

                <div class="nano">
                    <div class="nano-content">
                        <nav class="nav-main">
                            <ul class="nav nav-main">

                                <li>
                                    <a asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-home"></i><span>Dashboard</span>
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a asp-controller="Admin" asp-action="UserList">
                                            <i class="fas fa-user-shield"></i><span>Kullanıcılar</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Admin" asp-action="ControlPanel">
                                            <i class="fas fa-user-gear"></i><span>Yetkilendirme</span>
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a asp-controller="Category" asp-action="Index">
                                        <i class="fas fa-list"></i><span>Kategoriler</span>
                                    </a>
                                </li>

                                <li>
                                    <a asp-controller="Course" asp-action="Index">
                                        <i class="fas fa-graduation-cap"></i><span>Eğitimler</span>
                                    </a>
                                </li>

                                

                            </ul>
                        </nav>
                    </div>
                </div>
            </aside>
            <section role="main" class="content-body">
                <header class="page-header">
                    <h2>@ViewData["Title"]</h2>
                </header>

                <div class="container-fluid pt-3">
                    @RenderBody()
                </div>
            </section>

        </div>

        <footer class="footer text-center py-3">
            <span>&copy; @DateTime.Now.Year KDemia | Tüm hakları saklıdır.</span>
        </footer>

    </section>

    <script src="~/portoadmin/vendor/jquery/jquery.js"></script>
    <script src="~/portoadmin/vendor/popper/umd/popper.min.js"></script>
    <script src="~/portoadmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/portoadmin/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/portoadmin/js/theme.js"></script>
    <script src="~/portoadmin/js/custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>