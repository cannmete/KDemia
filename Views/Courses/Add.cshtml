@{
    ViewData["Title"] = "Add";
}

@model Course
<h2>Kurs Ekle</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Courses" asp-action="Add" method="post">

            <div class="mb-2">
                <label asp-for="courseName"></label>
                <input asp-for="courseName" class="form-control" />
                <span class="text-danger" asp-validation-for="courseName"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-2">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form_check" />
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}