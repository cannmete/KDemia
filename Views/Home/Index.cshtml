@model List<KDemia.Models.Course>

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark mb-4" style="background: linear-gradient(to right, #2b5876, #4e4376);">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">Geleceğini Kodla</h1>
        <p class="lead my-3">En güncel yazılım ve teknoloji eğitimleriyle kariyerine yön ver.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" class="d-flex gap-2">
            <input type="text" name="search" class="form-control" placeholder="Eğitim ara..." value="@ViewBag.CurrentSearch">
            <select name="categoryId" class="form-control w-25" asp-items="ViewBag.Categories">
                <option value="">Tüm Kategoriler</option>
            </select>
            <button class="btn btn-primary" type="submit">Ara</button>
        </form>
    </div>
</div>

<div class="row">
    @if (Model.Count == 0)
    {
        <div class="col-12 text-center mt-5">
            <h3>Aradığınız kriterlere uygun eğitim bulunamadı.</h3>
        </div>
    }

    @foreach (var item in Model)
    {
       
            double avgScore = 0;
            if (item.Reviews != null && item.Reviews.Count > 0)
            {
                avgScore = item.Reviews.Average(x => x.Rating);
            }
            // Yuvarlama yapabiliriz (örn: 4.5 üstü 5 görünsün gibi) veya direkt alabiliriz.
            // Gösterim için tam sayıya yuvarlıyorum:
            int fullStars = (int)Math.Round(avgScore); 
        

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div style="height: 200px; background-color: #eee; display:flex; align-items:center; justify-content:center; overflow:hidden;">
                    <span class="badge bg-primary position-absolute top-0 end-0 m-2">@item.Category?.Name</span>
                    <i class="fas fa-code fa-4x text-muted"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark mb-1">@item.Title</h5>
                    
                    <div class="mb-2">
                        @if (avgScore > 0)
                        {
                            <div class="text-warning small" title="Ortalama Puan: @avgScore.ToString("0.0")">
                                @for (int i = 0; i < fullStars; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (int i = fullStars; i < 5; i++)
                                {
                                    <i class="far fa-star text-muted"></i>
                                }
                                <span class="text-muted ms-1" style="font-size: 0.8rem;">(@item.Reviews.Count)</span>
                            </div>
                        }
                        else
                        {
                            <small class="text-muted"><i class="far fa-star"></i> Henüz değerlendirilmedi</small>
                        }
                    </div>
                    <p class="card-text text-muted small">
                        @(item.ShortDescription != null && item.ShortDescription.Length > 80
                            ? item.ShortDescription.Substring(0, 80) + "..."
                            : item.ShortDescription)
                    </p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="text-primary fw-bold" style="font-size: 1.2rem;">
                            @item.Price.ToString("C2")
                        </span>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">İncele</a>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-muted small">
                    <i class="fas fa-user"></i> @(item.User?.FullName ?? "Eğitmen")
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.2s;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
    }
</style>