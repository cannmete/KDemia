@model List<KDemia.Models.Course>

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark mb-4" style="background: linear-gradient(to right, #2b5876, #4e4376);">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">Geleceğini Kodla</h1>
        <p class="lead my-3">En güncel yazılım ve teknoloji eğitimleriyle kariyerine yön ver.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" class="d-flex gap-2">
            <input type="text" name="search" class="form-control" placeholder="Eğitim ara..." value="@ViewBag.CurrentSearch">
            <select name="categoryId" class="form-control w-25" asp-items="ViewBag.Categories">
                <option value="">Tüm Kategoriler</option>
            </select>
            <button class="btn btn-primary" type="submit">Ara</button>
        </form>
    </div>
</div>

<div class="row">
    @if (Model.Count == 0)
    {
        <div class="col-12 text-center mt-5">
            <h3>Aradığınız kriterlere uygun eğitim bulunamadı.</h3>
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div style="height: 200px; background-color: #eee; display:flex; align-items:center; justify-content:center; overflow:hidden;">
                    <span class="badge bg-primary position-absolute top-0 end-0 m-2">@item.Category?.Name</span>
                    <i class="fas fa-code fa-4x text-muted"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark">@item.Title</h5>
                    <p class="card-text text-muted small">
                        @(item.ShortDescription != null && item.ShortDescription.Length > 80
                                            ? item.ShortDescription.Substring(0, 80) + "..."
                                            : item.ShortDescription)
                </p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="text-primary fw-bold" style="font-size: 1.2rem;">
                            @item.Price.ToString("C2")
                        </span>
                        <a href="/Home/Details/@item.Id" class="btn btn-outline-dark btn-sm">İncele</a>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-muted small">
                    <i class="fas fa-user"></i> @(item.User?.FullName ?? "Eğitmen")
                </div>
            </div>
        </div>
        }
</div>

<style>
    .hover-effect {
        transition: transform 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
        }
</style>